<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ticketac</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        
    </head>
<body>
    <!-- NAVBAR -->
    <%- include('navbar') %> 
    
    <div class="container-fluid d-flex flex-column align-items-center justify-content-center">
        <div class="row d-flex flex-column col-9 cstMarginTop">
            <div class="mb-3">
                <h2 class="offset-2">My Tickets :</h2>
            </div>
            <div class="d-flex flex-column align-items-end">
                <table class="table table-hover table-light table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Journey</th>
                        <th scope="col">Date</th>
                        <th scope="col">Departure time</th>
                        <th scope="col">Price</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% 
                      let totalSum = 0;
                      for(let i=0; i<basketList.length; i++){ %> 
                      <tr>
                        <th scope="row" class="fw-bold"><%= [i+1] %></th>
                        <td><%= basketList[i].departure %> / <%= basketList[i].arrival %></td>
                        <td><%= new Date(basketList[i].date).toLocaleDateString('fr-FR') %>  </td>
                        <td><%= basketList[i].departureTime %> pm</td>
                        <td><%= basketList[i].price %> €</td>
                      </tr>
                      <% totalSum += basketList[i].price} %> 
                      <tr class="table-danger">
                        <th scope="row" class="fw-bold">Total</th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><%= totalSum %> €</td>
                      </tr>
                    </tbody>
                  </table>
                  <!-- Button trigger modal -->
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#exampleModal" id="myBtn">
                        Confirm
                    </button>
                    
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                </div>
                                <div class="modal-body">
                                    Please confirm your journeys
                                </div>
                                <div class="modal-footer">
                                    <a href="/confirm-basket"><button type="button" class="btn btn-danger">Confirm</button></a>
                                    <a href="/homepage"><button type="button" class="btn btn-secondary" data-dismiss="modal">Home</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>

    </div>

    <!-- FOOTER     -->
    <%- include('footer') %>   

    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>