<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ticketac</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
<body>
    <!-- NAVBAR -->
    <%- include('navbar') %> 
    
    <div class="container-fluid d-flex flex-column align-items-center justify-content-center">
        <div class="row d-flex flex-column col-9 cstMarginTop">
            <div class="mb-3">
                <h2 class="offset-2">My Last Trips :</h2>
            </div>
            <div class="d-flex flex-column align-items-end">
                <table class="table table-hover table-light table-borderless">
                    <thead>
                      <tr>
                        <th scope="row" class="fw-bold">N°</th>
                        <th scope="col">Date</th>
                        <th scope="col">Journey</th>
                        <th scope="col">Departure time</th>
                        <th scope="col">Price</th>
                      </tr>
                    </thead>
                    <tbody>

                        <% for(var i = 0; i < myTrips.length; i++){ %>
                      <tr>
                        <th scope="row" class="fw-bold"><%= i+1 %></th>
                        <td><%= myTrips[i].departure %> / <%= myTrips[i].arrival %></td>
                        <td><%= myTrips[i].date.toLocaleDateString() %></td>
                        <td><%= myTrips[i].departureTime %></td>
                        <td><%= myTrips[i].price %> €</td>
                      </tr>
                        <% } %>

                    </tbody>
                  </table>
                  <a href='/homepage'><button class="btn btn-danger btn-lg">Home</button></a>
            </div>
        </div>

    </div>

    <!-- FOOTER     -->
    <%- include('footer') %>   

    

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</body>
</html>